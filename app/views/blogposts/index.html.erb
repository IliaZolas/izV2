<div class="page-content-area">
    <h1>All Blogposts</h1>
    <p>All Blogposts should appear here</p>
    <div>
        <div class="button-container">
            <%= link_to "Add New", new_user_blogpost_path(current_user), class: "button-main" %>
        </div>
        <div class="table-container">
            <table>
                <th>Blogposts</th>
                <tbody>
                    <tr>
                        <% @blogposts.each do |blogpost| %>
                        <td>
                            <h3 class="table-h1"><%= blogpost.blog_title %></h3>
                            <p class="table-h2"><%= blogpost.blog_sub_heading %></p>
                            <p class="table-p"><%= truncate(strip_tags(blogpost.blog_text.to_s), length: 100) %></p>
                            <div class="flex table-button-spacing">
                                <%= link_to "Edit", edit_blogpost_path(blogpost),class: "td-button" %>
                                <%= link_to "Delete", blogpost_path(blogpost), method: :delete , class: "td-button" %>
                                <%= link_to "View", blogpost_path(blogpost), class: "td-button" %>
                            </div>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>    
    </div>
</div>
