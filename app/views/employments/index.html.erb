<div class="page-content-area">
    <h1>All Employment Posts</h1>
    <p>All past jobs should appear here</p>
    <div>
        <div class="button-container">
            <%= link_to "Add New", new_user_employment_path(current_user), class: "button-main" %>
        </div>
        <div class="table-container">
            <table>
                <th>Past Employment</th>
                <tbody>
                    <tr>
                        <% @employments.each do |employment| %>
                        <td>
                            <h3 class="table-h1"><%= employment.position_title %></h3>
                            <p class="table-h2"><%= employment.company_name %></p>
                            <p class="table-p"><%= employment.company_url %></p>
                            <p class="table-p"><%= employment.company_description %></p>
                            <div class="flex table-button-spacing">
                                <%= link_to "Edit", edit_employment_path(employment),class: "td-button" %>
                                <%= link_to "Delete", employment_path(employment), method: :delete , class: "td-button" %>
                            </div>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>    
    </div>
</div>